
  <view class="container">
    <view class="input-box">
      <input confirm-type="搜索" value="{{ keyword }}" placeholder-class="input-placeholder" placeholder="请输入关键字, 支持搜索金额、地址、备注" bindinput="handleSearch"/>
    </view>

    <view class="result-tip"  wx:if="{{ keyword !== '' }}">共查询到 {{ result.length }} 条账单</view>
    
    <view class="statement-list"  wx:if="{{ result.length > 0 }}">
      <block wx:for="{{ result }}" wx:for-index="index" wx:for-item="item" wx:key="index">
        
  <view class="statement" bindtap="$StatementItem$statement" data-com-index="{{index}}" data-wpystatement-a="id" data-wpystatement-b="{{ item.id }}">
    <view class="information">
      <!-- <view class="icon">
        <image src="{{ statement.icon_path }}"></image>
      </view> -->
      <view class="st-title">
        <view class="title">{{ item.category }}</view>
        <!-- <view class="description" wx:if="{{statement.description}}">{{ statement.description }}</view> -->
        <view class="time">{{ item.timeStr }} · {{ item.description }} · {{ item.asset }}</view>
      </view>
    </view>
    <view class="amount {{ item.type }}">
      {{ item.money }}
    </view>
  </view>

      </block>

      <view class="loading-icon" wx:if="{{ bottomLoading }}">
        <i-spin/>
      </view>
      <i-load-more wx:if="{{ searchNone }}" loading="{{ false }}"/>
    </view>

    <view wx:if="{{ result.length == 0 }}">
      
  <view class="empty">
    <view class="iconfont jz-icon-nomoredata empty-no-more"/>
    <view class="title fs14">{{ $empty$title }}</view>
  </view>

    </view>
  </view>