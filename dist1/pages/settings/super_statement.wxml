
  <view class="container">
    <view class="header">
      <view class="amount">{{ header.left }}</view>
      <view class="subtitle">结余</view>
    </view>
    <view class="surplus">
      <view class="all-income income">总收入： {{ header.income }}</view>
      <view class="all-expend expend">总支出： {{ header.expend }}</view>
    </view>

    
  <view class="filter-container">
    <view class="filter">
      <view bindtap="$filter$showContent" data-wpyshowcontent-a="time">
        <text>{{ $filter$timeName }}</text>
        <view class="down-icon"><image src="../../../public/images/real-down.png"/></view>
      </view>
      <view bindtap="$filter$showContent" data-wpyshowcontent-a="category">
        <text>{{ $filter$categoryName }}</text>
        <view class="down-icon"><image src="../../../public/images/real-down.png"/></view>
      </view>
      <view bindtap="$filter$showContent" data-wpyshowcontent-a="asset">
        <text>{{ $filter$assetName }}</text>
        <view class="down-icon"><image src="../../../public/images/real-down.png"/></view>
      </view>
    </view>

    <view class="content">
      <view class="time-filter"  wx:if="{{ $filter$filterType == 'time' }}">
        <text>年份</text>
        <view class="label-list">
          <view wx:for="{{ $filter$filter.time.years }}" class="item {{ $filter$params.year === item ? 'active' : '' }}" bindtap="$filter$paramsConcat" data-wpyparamsconcat-a="year" data-wpyparamsconcat-b="{{ item }}">
            {{ item }}年
          </view>
        </view>

        <text>月份</text>
        <view class="label-list">
          <view wx:for="{{ $filter$filter.time.months }}" class="item {{ $filter$params.month === item ? 'active' : '' }}" bindtap="$filter$paramsConcat" data-wpyparamsconcat-a="month" data-wpyparamsconcat-b="{{ item }}">
            {{ item }}月
          </view>
        </view>
      </view>

      <view class="time-filter"  wx:if="{{ $filter$filterType == 'category' }}">
        <view class="label-list">
          <view class="item {{ $filter$params.category === '' ? 'active' : '' }}" bindtap="$filter$paramsConcat" data-wpyparamsconcat-a="category" data-wpyparamsconcat-b="{{ $filter$allCategory }}">
            所有分类
          </view>

          <view wx:for="{{ $filter$filter.categories }}" class="item {{ $filter$params.category === item.id ? 'active' : '' }}" bindtap="$filter$paramsConcat" data-wpyparamsconcat-a="category" data-wpyparamsconcat-b="{{ item }}">
            {{ item.name }}
          </view>
        </view>
      </view>

      <view class="time-filter" wx:if="{{ $filter$filterType == 'asset' }}">
        <view class="label-list">
          <view class="item {{ $filter$params.category === '' ? 'active' : '' }}" bindtap="$filter$paramsConcat" data-wpyparamsconcat-a="asset" data-wpyparamsconcat-b="{{ $filter$allAsset }}">
            所有账户
          </view>

          <view wx:for="{{ $filter$filter.assets }}" class="item {{ $filter$params.asset === item.id ? 'active' : '' }}" bindtap="$filter$paramsConcat" data-wpyparamsconcat-a="asset" data-wpyparamsconcat-b="{{ item }}">
            {{ item.name }}
          </view>
        </view>
      </view>

    </view>

  </view>


    <view class="content">
      <view  wx:for="{{ list }}">
        <!-- header -->
        <view class="column" bindtap="getList" data-wpygetlist-a="{{ item.year }}" data-wpygetlist-b="{{ item.month }}" data-wpygetlist-c="{{ index }}">
          <view class="two-column">
            <view class="time align-right">
              <text>{{ item.month }}月</text>
              <text>{{ item.year }}年</text>
            </view>
            <view class="amount">
              <text class="income">收入： {{ item.income_amount }}</text>
              <text class="expend">支出： {{ item.expend_amount }}</text>
            </view>
          </view>
          <view class="left-amount align-right">
            <view>
              <view>{{ item.surplus }}</view>
              <view>结余</view>
            </view>
            <text class="iconfont jz-icon-arrow-down-copy" wx:if="{{ item.hidden }}"/>
            <text class="iconfont jz-icon-arrow-up" wx:else/>
          </view>
        </view>
        <!-- list -->
        <block wx:if="{{ !item.hidden }}" wx:for="{{ item.childs }}" wx:for-index="index" wx:for-item="st" wx:key="index">
          
  <view class="statement" bindtap="$statement$statement" data-com-index="{{index}}" data-wpystatement-a="id" data-wpystatement-b="{{ st.id }}">
    <view class="information">
      <!-- <view class="icon">
        <image src="{{ statement.icon_path }}"></image>
      </view> -->
      <view class="st-title">
        <view class="title">{{ st.category }}</view>
        <!-- <view class="description" wx:if="{{statement.description}}">{{ statement.description }}</view> -->
        <view class="time">{{ st.timeStr }} · {{ st.description }} · {{ st.asset }}</view>
      </view>
    </view>
    <view class="amount {{ st.type }}">
      {{ st.money }}
    </view>
  </view>

        </block>
      </view>
    </view>
  </view>