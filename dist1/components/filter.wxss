.filter-container {
  position: relative;
}
.filter-container .content {
  background: #f5f5f5;
  position: absolute;
  top: 70rpx;
  width: 100%;
}
.filter-container .content .time-filter {
  padding: 12px 12px 0 12px;
  margin-bottom: 6px;
}
.filter-container .content .time-filter text {
  font-size: 12px;
  color: #999;
}
.filter-container .content .time-filter .label-list {
  font-size: 14px;
}
.filter-container .content .time-filter .label-list .active.item {
  color: #2196F3;
}
.filter-container .content .time-filter .label-list > .item {
  background: white;
  display: inline-block;
  padding: 4px 8px;
  margin-right: 12px;
  color: #212121;
  border-radius: 2px;
  margin-bottom: 8px;
  border: 1px solid #efefef;
}
.filter-container .filter {
  height: 70rpx;
  line-height: 70rpx;
  background: white;
  box-shadow: 0 0 6rpx #ccc;
  display: flex;
}
.filter-container .filter > view {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
}
.filter-container .filter > view > text {
  font-size: 14px;
  margin-right: 8rpx;
}
.filter-container .filter .down-icon {
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
}
.filter-container .filter .down-icon image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
